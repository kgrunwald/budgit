{
    "name": "budgit",
    "version": "0.1.0",
    "private": true,
    "engines": {
        "node": "12.x"
    },
    "scripts": {
        "serve": "VUE_APP_PLAID_WEBHOOK_URL=`./scripts/run_ngrok.sh` vue-cli-service serve",
        "start:db:prod": "parse-dashboard --config parse-dashboard-prod.json --port 4042",
        "start:client": "yarn serve",
        "start:prod": "node dist/server/server/index.js",
        "build": "vue-cli-service build --env",
        "clean": "rm -rf dist",
        "lint": "vue-cli-service lint",
        "test:e2e": "vue-cli-service test:e2e",
        "test:unit": "vue-cli-service test:unit"
    },
    "dependencies": {
        "@fortawesome/fontawesome-svg-core": "^1.2.26",
        "@fortawesome/free-solid-svg-icons": "^5.12.0",
        "@fortawesome/vue-fontawesome": "^0.1.9",
        "@types/mathjs": "^6.0.1",
        "@types/uuid": "^3.4.5",
        "bootstrap": "^4.3.1",
        "bootstrap-vue": "^2.0.0-rc.28",
        "core-js": "^2.6.5",
        "date-fns": "^2.9.0",
        "firebase": "^7.6.2",
        "firebase-functions": "^3.3.0",
        "firebaseui": "^4.4.0",
        "lodash": "^4.17.15",
        "mathjs": "^6.0.4",
        "money-math": "^2.5.1",
        "prettier": "^1.19.1",
        "reflect-metadata": "^0.1.13",
        "tslint-config-prettier": "^1.18.0",
        "tslint-plugin-prettier": "^2.1.0",
        "uuid": "^3.3.2",
        "vue": "^2.6.10",
        "vue-class-component": "^7.0.2",
        "vue-property-decorator": "^8.1.0",
        "vue-router": "^3.0.3",
        "vuedraggable": "^2.23.0",
        "vuex": "^3.0.1",
        "vuex-module-decorators": "^0.9.9"
    },
    "devDependencies": {
        "@firebase/firestore-types": "^1.9.0",
        "@firebase/testing": "^0.16.6",
        "@types/jest": "^23.1.4",
        "@types/lodash": "^4.14.136",
        "@types/money-math": "^2.5.0",
        "@vue/cli-plugin-babel": "^3.9.0",
        "@vue/cli-plugin-e2e-cypress": "^3.9.0",
        "@vue/cli-plugin-typescript": "^3.9.0",
        "@vue/cli-plugin-unit-jest": "^3.9.0",
        "@vue/cli-service": "^3.9.0",
        "@vue/test-utils": "1.0.0-beta.29",
        "babel-core": "7.0.0-bridge.0",
        "lint-staged": "^8.1.5",
        "ngrok": "^3.2.4",
        "node-sass": "^4.9.0",
        "nodemon": "^1.19.1",
        "sass-loader": "^7.1.0",
        "ts-jest": "^23.0.0",
        "ts-node": "^8.3.0",
        "tslint": "^5.19.0",
        "typescript": "^3.4.3",
        "vue-template-compiler": "^2.6.10"
    },
    "nodemonConfig": {
        "ignore": [
            "**/*.test.ts",
            "**/*.spec.ts",
            ".git",
            "node_modules"
        ],
        "watch": [
            "./src/models/*",
            "./.env.local"
        ],
        "exec": "",
        "ext": "ts"
    },
    "prettier": {
        "tabWidth": 4,
        "singleQuote": true
    },
    "gitHooks": {
        "pre-commit": "lint-staged"
    },
    "lint-staged": {
        "src/**/*.ts": [
            "vue-cli-service lint",
            "git add"
        ],
        "*.vue": [
            "vue-cli-service lint",
            "git add"
        ]
    }
}

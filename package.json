{
  "name": "budgit",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": "12.x"
  },
  "scripts": {
    "serve": "vue-cli-service serve",
    "start:client": "yarn serve",
    "start:server": "nodemon",
    "start:prod": "node dist/server/index.js",
    "build": "vue-cli-service build && tsc -p server",
    "clean": "rm -rf dist",
    "lint": "vue-cli-service lint",
    "test:e2e": "vue-cli-service test:e2e",
    "test:unit": "vue-cli-service test:unit"
  },
  "dependencies": {
    "core-js": "^2.6.5",
    "express": "^4.17.1",
    "vue": "^2.6.10",
    "vue-class-component": "^7.0.2",
    "vue-property-decorator": "^8.1.0",
    "vue-router": "^3.0.3",
    "vuex": "^3.0.1",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.0",
    "@types/jest": "^23.1.4",
    "@vue/cli-plugin-babel": "^3.9.0",
    "@vue/cli-plugin-e2e-cypress": "^3.9.0",
    "@vue/cli-plugin-typescript": "^3.9.0",
    "@vue/cli-plugin-unit-jest": "^3.9.0",
    "@vue/cli-service": "^3.9.0",
    "@vue/test-utils": "1.0.0-beta.29",
    "babel-core": "7.0.0-bridge.0",
    "lint-staged": "^8.1.5",
    "node-sass": "^4.9.0",
    "nodemon": "^1.19.1",
    "sass-loader": "^7.1.0",
    "ts-jest": "^23.0.0",
    "ts-node": "^8.3.0",
    "typescript": "^3.4.3",
    "vue-template-compiler": "^2.6.10"
  },
  "nodemonConfig": {
    "ignore": [
        "**/*.test.ts",
        "**/*.spec.ts",
        ".git",
        "src/**",
        "node_modules"
      ],
      "watch": [
        "server"
      ],
      "exec": "ts-node -P ./server/tsconfig.json ./server/index.ts",
      "ext": "ts"
  },    
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "vue-cli-service lint",
      "git add"
    ],
    "*.vue": [
      "vue-cli-service lint",
      "git add"
    ]
  }
}
